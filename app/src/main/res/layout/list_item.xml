<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:background="@color/blugre"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="@dimen/corner_rad"
    app:cardElevation="@dimen/elev">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/card_elevation"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_ht"
            android:scaleType="center"
            tools:src="@drawable/maha" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:background="@color/blugre"
            android:textAlignment="center"
            android:textColor="@color/backish"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginTop="@dimen/app_ht"
            android:textSize="@dimen/textSize"
            tools:text = "@string/place"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>